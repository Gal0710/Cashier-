    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const cart = {};
            let total = 0;
            
            // Initialize cart quantities
            document.querySelectorAll('.menu-item').forEach(item => {
                const itemId = item.querySelector('.add-btn').dataset.item;
                cart[itemId] = {
                    quantity: 0,
                    name: item.querySelector('.item-name').textContent,
                    price: parseFloat(item.querySelector('.add-btn').dataset.price)
                };
            });
            
            // Add button functionality
            document.querySelectorAll('.add-btn').forEach(btn => {
                btn.addEventListener('click', function() {
                    const itemId = this.dataset.item;
                    addToCart(itemId);
                });
            });
            
            // Plus button functionality
            document.querySelectorAll('.quantity-btn.plus').forEach(btn => {
                btn.addEventListener('click', function() {
                    const itemId = this.dataset.item;
                    addToCart(itemId);
                });
            });
            
            // Minus button functionality
            document.querySelectorAll('.quantity-btn.minus').forEach(btn => {
                btn.addEventListener('click', function() {
                    const itemId = this.dataset.item;
                    
                    if (cart[itemId].quantity > 0) {
                        cart[itemId].quantity--;
                        total -= cart[itemId].price;
                        
                        updateQuantityDisplay(itemId);
                        updateTotal();
                    }
                });
            });
            
            function addToCart(itemId) {
                cart[itemId].quantity++;
                total += cart[itemId].price;
                
                updateQuantityDisplay(itemId);
                updateTotal();
                
                // Add a little "meow" animation
                const itemElement = document.querySelector(`.add-btn[data-item="${itemId}"]`).closest('.menu-item');
                itemElement.style.transform = 'scale(1.05)';
                setTimeout(() => {
                    itemElement.style.transform = 'scale(1)';
                }, 300);
            }
            
            function updateQuantityDisplay(itemId) {
                document.getElementById(`${itemId}-qty`).textContent = cart[itemId].quantity;
            }
            
            function updateTotal() {
                document.getElementById('total-amount').textContent = `$${total.toFixed(2)}`;
                
                // Bounce the cart button when total changes
                const cartBtn = document.getElementById('cart-button');
                cartBtn.style.transform = 'scale(1.1)';
                setTimeout(() => {
                    cartBtn.style.transform = 'scale(1)';
                }, 200);
            }
            
            // Cart button functionality
            document.getElementById('cart-button').addEventListener('click', function() {
                let cartContents = "Your Order:\n\n";
                let hasItems = false;
                let itemCount = 0;
                
                for (const itemId in cart) {
                    if (cart[itemId].quantity > 0) {
                        hasItems = true;
                        itemCount += cart[itemId].quantity;
                        const itemTotal = cart[itemId].quantity * cart[itemId].price;
                        
                        cartContents += `${cart[itemId].name} x ${cart[itemId].quantity} = $${itemTotal.toFixed(2)}\n`;
                    }
                }
                
                if (hasItems) {
                    cartContents += `\nTotal (${itemCount} items): $${total.toFixed(2)}`;
                    
                    // Create a modal instead of using alert
                    const modal = document.createElement('div');
                    modal.style.position = 'fixed';
                    modal.style.top = '0';
                    modal.style.left = '0';
                    modal.style.width = '100%';
                    modal.style.height = '100%';
                    modal.style.backgroundColor = 'rgba(0,0,0,0.5)';
                    modal.style.display = 'flex';
                    modal.style.justifyContent = 'center';
                    modal.style.alignItems = 'center';
                    modal.style.zIndex = '1000';
                    
                    const modalContent = document.createElement('div');
                    modalContent.style.backgroundColor = 'white';
                    modalContent.style.padding = '30px';
                    modalContent.style.borderRadius = '20px';
                    modalContent.style.maxWidth = '80%';
                    modalContent.style.maxHeight = '80%';
                    modalContent.style.overflow = 'auto';
                    modalContent.style.boxShadow = '0 5px 15px rgba(0,0,0,0.3)';
                    modalContent.style.position = 'relative';
                    
                    const closeBtn = document.createElement('button');
                    closeBtn.textContent = '√ó';
                    closeBtn.style.position = 'absolute';
                    closeBtn.style.top = '10px';
                    closeBtn.style.right = '10px';
                    closeBtn.style.background = 'none';
                    closeBtn.style.border = 'none';
                    closeBtn.style.fontSize = '1.5rem';
                    closeBtn.style.cursor = 'pointer';
                    closeBtn.style.color = '#ff69b4';
                    closeBtn.addEventListener('click', () => {
                        document.body.removeChild(modal);
                    });
                    
                    const modalTitle = document.createElement('h2');
                    modalTitle.textContent = 'üê± Your Catfe Order üê±';
                    modalTitle.style.color = '#ff69b4';
                    modalTitle.style.marginTop = '0';
                    modalTitle.style.textAlign = 'center';
                    
                    const orderDetails = document.createElement('pre');
                    orderDetails.textContent = cartContents;
                    orderDetails.style.whiteSpace = 'pre-wrap';
                    orderDetails.style.fontFamily = 'inherit';
                    orderDetails.style.fontSize = '1.1rem';
                    
                    const checkoutBtn = document.createElement('button');
                    checkoutBtn.textContent = 'Proceed to Checkout';
                    checkoutBtn.style.display = 'block';
                    checkoutBtn.style.margin = '20px auto 0';
                    checkoutBtn.style.padding = '10px 20px';
                    checkoutBtn.style.backgroundColor = '#ff69b4';
                    checkoutBtn.style.color = 'white';
                    checkoutBtn.style.border = 'none';
                    checkoutBtn.style.borderRadius = '20px';
                    checkoutBtn.style.cursor = 'pointer';
                    checkoutBtn.style.fontSize = '1rem';
                    checkoutBtn.style.transition = 'all 0.3s';
                    checkoutBtn.addEventListener('mouseover', () => {
                        checkoutBtn.style.backgroundColor = '#ff1493';
                        checkoutBtn.style.transform = 'scale(1.05)';
                    });
                    checkoutBtn.addEventListener('mouseout', () => {
                        checkoutBtn.style.backgroundColor = '#ff69b4';
                        checkoutBtn.style.transform = 'scale(1)';
                    });
                    checkoutBtn.addEventListener('click', () => {
                        alert('Thank you for your order! Your delicious cat-themed food will be ready soon! üò∫');
                        document.body.removeChild(modal);
                    });
                    
                    modalContent.appendChild(closeBtn);
                    modalContent.appendChild(modalTitle);
                    modalContent.appendChild(orderDetails);
                    modalContent.appendChild(checkoutBtn);
                    modal.appendChild(modalContent);
                    document.body.appendChild(modal);
                    
                    // Close modal when clicking outside
                    modal.addEventListener('click', (e) => {
                        if (e.target === modal) {
                            document.body.removeChild(modal);
                        }
                    });
                } else {
                    // Create a cute empty cart message
                    const emptyCart = document.createElement('div');
                    emptyCart.style.position = 'fixed';
                    emptyCart.style.bottom = '100px';
                    emptyCart.style.right = '20px';
                    emptyCart.style.backgroundColor = 'white';
                    emptyCart.style.padding = '15px';
                    emptyCart.style.borderRadius = '15px';
                    emptyCart.style.boxShadow = '0 3px 10px rgba(0,0,0,0.2)';
                    emptyCart.style.zIndex = '1000';
                    emptyCart.style.display = 'flex';
                    emptyCart.style.alignItems = 'center';
                    emptyCart.innerHTML = `
                        <span style="font-size: 1.5rem; margin-right: 10px;">üòø</span>
                        <div>Your cart is empty!<br>Add some delicious items first!</div>
                    `;
                    
                    document.body.appendChild(emptyCart);
                    
                    setTimeout(() => {
                        emptyCart.style.transform = 'translateY(-20px)';
                        emptyCart.style.opacity = '0';
                        setTimeout(() => {
                            document.body.removeChild(emptyCart);
                        }, 300);
                    }, 2000);
                }
            });
        });
    </script>
</body>
</html>